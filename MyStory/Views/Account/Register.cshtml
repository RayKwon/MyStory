        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FullName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FullName)
            @Html.ValidationMessageFor(model => model.FullName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsOpenId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsOpenId)
            @Html.ValidationMessageFor(model => model.IsOpenId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.GravatarUrl)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GravatarUrl)
            @Html.ValidationMessageFor(model => model.GravatarUrl)
