@model IEnumerable<MyStory.ViewModels.CommentSidebarViewModel>
@{
    Layout = null;
}
<div class="well sidebar-nav shadow" style="padding: 7px">
    <ul class="nav nav-list">
        <li class="nav-header">
                <i class="icon-comment"></i> Comments
        </li>
        @foreach (var item in Model)
        {
            <li><a href="@Url.Action("Detail", "Post", new { Id = @item.PostId })#@item.CommentId">@item.Content by @item.CommenterName</a></li>
        }
    </ul>
</div>
