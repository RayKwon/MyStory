@model MyStory.ViewModels.LogOnInput
@{
    ViewBag.Title = "LogOn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="page-header">
    LogOn</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.", new { @class = "alert alert-error" })
    <div class="control-group">
        @Html.LabelFor(m => m.AccountEmail, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.AccountEmail)
            @Html.ValidationMessageFor(m => m.AccountEmail)
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(m => m.AccountPassword, new { @class = "control-label" })
        <div class="controls">
            @Html.PasswordFor(m => m.AccountPassword)
            @Html.ValidationMessageFor(m => m.AccountPassword)
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(m => m.RememberMe, new { @class = "control-label" })
        <div class="controls">
            @Html.CheckBoxFor(m => m.RememberMe)
        </div>
    </div>
    <div class="form-actions">
        <input type="submit" value="Log On" class="btn btn-primary" />
    </div>
}
@section Script
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $('form').addClass('form-horizontal');
            $('#logon-nav').addClass('active');
        });
    </script>
}
